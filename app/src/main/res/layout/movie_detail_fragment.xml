<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingConstraints">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/productTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:gravity="center"
            tools:text="aksnfanfsşalsaşfas" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/productImageView"
                android:layout_width="140dp"
                android:layout_height="140dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/vote_average"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/movie_ff6a6a"
                android:textStyle="bold"
                android:layout_margin="10dp"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                app:layout_constraintBottom_toBottomOf="@id/productImageView"
                tools:text="9.9" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release Date"
                android:textStyle="bold"
                android:layout_margin="9dp"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@id/productImageView"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/release_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:maxLines="5"
                android:lines="1"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@id/release_date"
                app:layout_constraintStart_toEndOf="@id/productImageView"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/genres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genres"
                android:textStyle="bold"
                android:layout_margin="9dp"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@id/productImageView"
                app:layout_constraintTop_toBottomOf="@id/release_date_value"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/genres_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:maxLines="5"
                android:lines="1"
                android:textSize="10dp"
                app:layout_constraintStart_toEndOf="@id/productImageView"
                app:layout_constraintTop_toBottomOf="@id/genres"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/spoken_languages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Languages"
                android:textStyle="bold"
                android:layout_margin="9dp"
                android:textSize="9dp"
                app:layout_constraintTop_toBottomOf="@id/genres_value"
                app:layout_constraintStart_toEndOf="@id/productImageView"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/spoken_languages_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="5"
                android:lines="1"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@id/spoken_languages"
                app:layout_constraintStart_toStartOf="@id/spoken_languages"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/production_companies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Production Companies"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="9dp"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                app:layout_constraintTop_toBottomOf="@id/productImageView"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/production_companies_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="5"
                android:lines="1"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                app:layout_constraintTop_toBottomOf="@id/production_companies"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/production_countries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Production Countries"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="9dp"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                app:layout_constraintTop_toBottomOf="@id/production_companies_value"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/production_countries_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="5"
                android:lines="1"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                app:layout_constraintTop_toBottomOf="@id/production_countries"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                app:layout_constraintTop_toBottomOf="@id/production_countries_value"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/overview_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:maxLines="5"
                android:textSize="10dp"
                app:layout_constraintTop_toBottomOf="@id/overview"
                app:layout_constraintStart_toStartOf="@id/productImageView"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</layout>